<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_itemview_book"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">
    <LinearLayout
        android:id="@+id/main_layout_book_main_information"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">
        <TextView
            android:id="@+id/main_textview_book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/main_textview_book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/main_textview_released_date"
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/main_imageview_book_cover"
        android:layout_width="70dp"
        android:layout_height="120dp"
        android:src="@drawable/book_cover_placeholder"
        android:contentDescription="@string/book_cover" />
</LinearLayout>