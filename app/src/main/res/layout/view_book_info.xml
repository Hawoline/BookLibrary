<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/view_book_info"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/bookinfo_textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/bookinfo_imageview_book_cover"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/book_cover_placeholder"
            android:contentDescription="@string/book_cover" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/bookinfo_textview_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/bookinfo_textview_genres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bookinfo_textview_genres"/>
            <TextView
                android:id="@+id/bookinfo_textview_published_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bookinfo_textview_published_date"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/bookinfo_textview_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>